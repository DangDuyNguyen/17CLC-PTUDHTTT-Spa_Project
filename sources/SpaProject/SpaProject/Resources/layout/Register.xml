<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:gravity="center">
        
        <LinearLayout
            android:id="@+id/usernameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <TextView
            android:id="@+id/usernameLabel"
            android:text="Tên đăng nhập"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            />
        
            <EditText
            android:id="@+id/usernameTxtbox"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginRight="10dp"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/usernameView"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

            <TextView
            android:id="@+id/passwordLabel"
            android:text="Mật khẩu"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
             />

            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/passwordTxtbox"
                android:layout_gravity="start"
                android:layout_marginRight="10dp"
            />
        </LinearLayout>
    
        <LinearLayout
        android:id="@+id/passwordConfirmView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/passwordView"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

            <TextView
            android:id="@+id/passwordConfirmLabel"
            android:text="Xác nhận mật khẩu"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
                />

            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/passwordConfirmTxtbox"
                android:layout_gravity="start"
                android:layout_marginRight="10dp"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullnameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/passwordConfirmView"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <TextView
            android:id="@+id/fullnameLabel"
            android:text="Họ và tên"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            />
        
            <EditText
            android:id="@+id/fullnameTxtbox"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginRight="10dp"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/genderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/fullnameView"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <TextView
            android:id="@+id/genderLabel"
            android:text="Giới tính"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            />
                
            <EditText
            android:id="@+id/genderTxtbox"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginRight="10dp"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dobView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/genderView"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <TextView
            android:id="@+id/dobLabel"
            android:text="Ngày sinh"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            />
        
            <EditText
            android:id="@+id/dobTxtbox"
            android:inputType="datetime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginRight="10dp"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/dobView"
            android:layout_toStartOf="@id/mainFrame"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <TextView
            android:id="@+id/phoneLabel"
            android:text="Số điện thoại"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            />
        
            <EditText
            android:id="@+id/phoneTxtbox"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginRight="10dp"
            />

        </LinearLayout>

        <CheckBox
            android:text="Tôi đồng ý với chính sách và điều khoản"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/phoneView"
            android:id="@+id/checkBox" />

        <Button
        android:id="@+id/registerBtn" 
        android:text="Đăng ký"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"
        />

        <View
        android:id="@+id/seperatedLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/black"
        android:layout_below="@id/registerBtn"/>

        <TextView
        android:id="@+id/SocialInstructionRegister"
        android:text="Hoặc đăng ký bằng mạng xã hội của bạn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/seperatedLine"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAlignment="center"/>

        <Button
        android:id="@+id/fbregister" 
        android:text="Facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SocialInstructionRegister"
        android:layout_marginTop="20dp"
        />

        <Button
        android:id="@+id/ggregister" 
        android:text="Google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fbregister"
        android:layout_marginTop="5dp"
        />

        <TextView
            android:id="@+id/registerTrans"
            android:text="Đã có tài khoản, đăng nhập ngay!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/ggregister"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:textAlignment="center"
            />
    </RelativeLayout>
</ScrollView>